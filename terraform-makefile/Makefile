# Makefile for Terraform Tasks

# Initialize Terraform
init:
	terraform init

# Validate Terraform configs
validate:
	terraform validate

# Format Terraform files
fmt:
	terraform fmt

# Plan infrastructure changes
plan:
	terraform plan

# Apply changes (with prompt)
apply:
	terraform apply

# Destroy infrastructure
destroy:
	terraform destroy

# Show outputs
output:
	terraform output

# Clean up .terraform and state files (use with caution)
clean:
	rm -rf .terraform terraform.tfstate* .terraform.lock.hcl
